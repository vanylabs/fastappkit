"""
Alembic environment configuration for {{ app_name }} migrations.

Internal apps use the shared version table (alembic_version) and core's settings.
"""

import sys
from pathlib import Path
from logging.config import fileConfig

from alembic import context
from sqlalchemy import engine_from_config, pool, MetaData

# Add project root to sys.path so core module can be imported
# This assumes env.py is in apps/{{ app_name }}/migrations/
# Path: project_root/apps/{{ app_name }}/migrations/env.py
# So we need to go up 3 levels: migrations -> {{ app_name }} -> apps -> project_root
_project_root = Path(__file__).parent.parent.parent.parent
if str(_project_root) not in sys.path:
    sys.path.insert(0, str(_project_root))

# Import core settings
from core.config import Settings

# Get settings
settings = Settings()
config = context.config

# Set database URL from settings
config.set_main_option("sqlalchemy.url", settings.DATABASE_URL)

# Interpret the config file for Python logging
if config.config_file_name is not None:
    fileConfig(config.config_file_name)

# Internal apps use shared version table
config.set_main_option("version_table", "alembic_version")

# Get target_metadata from config attributes (set by fastappkit autogenerate)
# or try to import from app models, or use empty MetaData
target_metadata = config.attributes.get("target_metadata")
if target_metadata is None:
    # Try to import metadata from app models if available
    try:
        from apps.{{ app_name }}.models import Base
        target_metadata = Base.metadata
    except (ImportError, AttributeError):
        # No models yet, use empty MetaData for initial migration
        target_metadata = MetaData()


def run_migrations_offline() -> None:
    """Run migrations in 'offline' mode."""
    url = config.get_main_option("sqlalchemy.url")

    # Get version_locations if set (for multi-directory support)
    version_locations_str = config.get_main_option("version_locations")
    version_locations = None
    if version_locations_str:
        version_locations = [loc.strip() for loc in version_locations_str.split(",")]

    context_opts = {
        "url": url,
        "target_metadata": target_metadata,
        "literal_binds": True,
        "dialect_opts": {"paramstyle": "named"},
        "version_table": "alembic_version",  # Shared version table
    }
    if version_locations:
        context_opts["version_locations"] = version_locations

    context.configure(**context_opts)

    with context.begin_transaction():
        context.run_migrations()


def run_migrations_online() -> None:
    """Run migrations in 'online' mode."""
    connectable = engine_from_config(
        config.get_section(config.config_ini_section, {}),
        prefix="sqlalchemy.",
        poolclass=pool.NullPool,
    )

    with connectable.connect() as connection:
        # Get version_locations if set (for multi-directory support)
        version_locations_str = config.get_main_option("version_locations")
        version_locations = None
        if version_locations_str:
            version_locations = [loc.strip() for loc in version_locations_str.split(",")]

        context_opts = {
            "connection": connection,
            "target_metadata": target_metadata,
            "version_table": "alembic_version",  # Shared version table
        }
        if version_locations:
            context_opts["version_locations"] = version_locations

        context.configure(**context_opts)

        with context.begin_transaction():
            context.run_migrations()


if context.is_offline_mode():
    run_migrations_offline()
else:
    run_migrations_online()
